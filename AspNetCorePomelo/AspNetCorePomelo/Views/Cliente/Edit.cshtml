@model Usuarios

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Usuário</title>
</head>
<body>
    <div class="container">
        <h3>Editar Usuário</h3>

        <form method="post" asp-controller="usuario" asp-action="edit">
            <div class="form-group">
                <label for="exampleInputEmail1">Nome</label>
                <input type="text" class="form-control" asp-for="Nome" placeholder="Nome">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Usuario</label>
                <input type="text" class="form-control" asp-for="Usuario" placeholder="Usuario">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Senha</label>
                <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
            </div>

            <div class="form-group">
                <label>Nível</label>
                <select class="form-control" asp-for="Nivel">
                    <option>Comum</option>
                    <option>Admin</option>
                </select>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" asp-for="Ativo"> Ativo
                </label>
            </div>
            <button type="submit" class="btn btn-warning">Editar</button>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</body>
</html>
