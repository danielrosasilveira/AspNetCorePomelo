@model ClientesModel
@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Adicionar Cliente</title>
</head>
<body>
    <div class="container">
        <h3>Cadastro de Cliente</h3>

        <form method="post" asp-controller="cliente" asp-action="add">
            <div class="form-group">
                <label for="exampleInputEmail1">Nome</label>
                <input type="text" class="form-control" asp-for="Nome" placeholder="Nome">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Endereço</label>
                <input type="text" class="form-control" asp-for="Endereco" placeholder="Endereco">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Telefone</label>
                <input type="text" class="form-control" asp-for="Telefone" placeholder="Telefone">
            </div>

            
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
</body>
</html>
